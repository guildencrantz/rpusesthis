---
pageable: true
per_page: 3
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<ul class="list-unstyled article-list">
  <% blog.articles[0...999].each do |article| %>
    <li class="article-header">
      <% link_to article do %>
        <%= image_tag article.data.avatar, :class => "avatar img-circle" %>
        <hgroup>
          <h3 class="name"><%= article.title %></h3>
          <span class="position"><%= article.data.position %></span>
        </hgroup>
      <% end %>
    </li>
  <% end %>
</ul>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
